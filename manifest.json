{
  "manifest_version": 2,

  "name": "Sadden the news",
  "description": "This extension will make you sad",
  "version": "1.0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Sad"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.walla.co.il/*", "https://www.reddit.com/r/worldnews/*", "http://www.bbc.com/*"],
      "js" : ["script.js"]
    }
  ]
}